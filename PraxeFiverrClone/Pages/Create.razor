@page "/user/create"
@using DataAccessLibrary
@using DataTemplateLibrary
@using DataTemplateLibrary.Models;
@inject DBManager dbManager;
@inject MyIdService IdService;


<!--pleaseeee god-->
<h3>Create</h3>

<h3>name:</h3>
<input type="text" @bind="@Name" @oninput="@((e) => { Name=(string)e.Value;})" />

<h3>price:</h3>
<input type="text" @bind="@Price" @oninput="@((e) => { Price=Int32.Parse((string)e.Value + "");})" />

<h3>short:</h3>
<input type="text" @bind="@Description" @oninput="@((e) => { Description=(string)e.Value;})" />

<h3>long:</h3>
<input type="text" @bind="@DescriptionLong" @oninput="@((e) => { DescriptionLong=(string)e.Value;})" />

<button @onclick = "CreateServis">create</button>

@code {
    private string Name;
    private string Description;
    private string DescriptionLong;
    private int Price;

    public void CreateServis()
    {
        
        dbManager.CreateService(IdService.id, new DBService(0, 0, Name, Price, new DateOnly(2024, 1, 1), null,true,Description,DescriptionLong,null));
    }
}

